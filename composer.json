{
    "name": "jacobstr/matura",
    "description": "A mocha inspired testing framework for php.",
    "authors": [
        {
            "name": "jacobstr",
            "email": "jacobstr@gmail.com"
        }
    ],
    "bin" : [ "bin/matura" ],
    "require": {
        "esperance/esperance": "dev-master",
        "jacobstr/dumpling": "dev-master",
        "mockery/mockery": "dev-master",
        "symfony/console": "dev-master",
        "twig/twig": "1.*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jacobstr/esperance.git"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload" : {
        "psr-4": {
            "Matura\\": "lib",
            "Matura\\Test\\": "test"
        },
        "_comment" : "autoload-dev was not working with the Test namespace."
    }
}
